<IdentityProviders>
    <IdentityProvider>
        <IdentityProviderName>SilvaIDP17</IdentityProviderName>
        <DisplayName></DisplayName>
        <IdentityProviderDescription></IdentityProviderDescription>
        <enable>true</enable>
        <Alias>https://dev5.account.verifone.com:9443/oauth2/token/</Alias>
        <IsPrimary></IsPrimary>
        <IsFederationHub></IsFederationHub>
        <HomeRealmId></HomeRealmId>
        <ProvisioningRole></ProvisioningRole>
        <DefaultAuthenticatorConfig>
        </DefaultAuthenticatorConfig>

        <DefaultProvisioningConnectorConfig>
            <enabled>true</enabled>
            <Name>scim</Name>
            <ProvisioningProperties>
                <Property>
                    <name>scim</name>
                    <value>true</value>
                </Property>
                <Property>
                    <name>scimProvDefault</name>
                    <value>on</value>
                </Property>
                <Property>
                    <name>scim-username</name>
                    <value>admin</value>
                </Property>
                <Property>
                    <name>scim-password</name>
                    <value>admin</value>
                </Property>
                <Property>
                    <name>scim-user-ep</name>
                    <value>https://localhost:9445/wso2/scim/Users/</value>
                </Property>
                <Property>
                    <name>scim-group-ep</name>
                    <value>https://localhost:9445/wso2/scim/Groups/</value>
                </Property>
                <Property>
                    <name>scim-user-store-domain</name>
                    <value>PRIMARY</value>
                </Property>
                <Property>
                    <name>scimPwdProvEnabled</name>
                    <value>on</value>
                </Property>
                <Property>
                    <name>scim-default-pwd</name>
                    <value>password123</value>
                </Property>
            </ProvisioningProperties>

        </DefaultProvisioningConnectorConfig>

        <ProvisioningConnectorConfigs>
            <ProvisioningConnectorConfig>
                <enabled>true</enabled>
                <Name>scim</Name>
                <ProvisioningProperties>
                    <Property>
                        <name>scim</name>
                        <value>true</value>
                    </Property>
                    <Property>
                        <name>scimProvDefault</name>
                        <value>on</value>
                    </Property>
                    <Property>
                        <name>scim-username</name>
                        <value>user123</value>
                    </Property>
                    <Property>
                        <name>scim-password</name>
                        <value>abc123</value>
                    </Property>
                    <Property>
                        <name>scim-user-ep</name>
                        <value>https://localhost:9445/wso2/scim/Users/</value>
                    </Property>
                    <Property>
                        <name>scim-group-ep</name>
                        <value>https://localhost:9445/wso2/scim/Groups/</value>
                    </Property>
                    <Property>
                        <name>scim-user-store-domain</name>
                        <value>PRIMARY</value>
                    </Property>
                    <Property>
                        <name>scim-enable-pwd-provisioning</name>
                        <value>true</value>
                    </Property>
                </ProvisioningProperties>
            </ProvisioningConnectorConfig>
        </ProvisioningConnectorConfigs>

        <PermissionsAndRoleConfig>
            <RoleMappings>
                <RoleMapping>
                    <localRole>provision</localRole>
                    <remoteRole>role3</remoteRole>
                </RoleMapping>
            </RoleMappings>
        </PermissionsAndRoleConfig>

        <ClaimConfig></ClaimConfig>
        <Certificate>adfs.prod.crt</Certificate>
        <PermissionAndRoleConfig></PermissionAndRoleConfig>
        <JustInTimeProvisioningConfig>
            <provisioningEnabled>true</provisioningEnabled>
            <provisioningUserStore>adfs</provisioningUserStore>
            <userStoreClaimUri></userStoreClaimUri>
        </JustInTimeProvisioningConfig>
    </IdentityProvider>
</IdentityProviders>
